<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core">
    <Dialog
        id="myDialog"
        title="{i18n>popupTitle}">
        <content>
            <core:Icon 
                src="sap-icon://hello-world"
                size="8rem"
                class="sapUiMediumMagin"/>
        </content>
        <beginButton>
            <Button
                text="{i18n>popupOk}"
                press=".onCloseDialog"/>
        </beginButton>
        <endButton>
        <Button
                text="{i18n>popupCancel}"
                press=".onCloseDialog"/>
        </endButton>
    </Dialog>
</core:FragmentDefinition>